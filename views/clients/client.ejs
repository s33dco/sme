<header>
  <h1 class='capitalize'><%=client.name%></h1>
  <p><%=client.address1%></p>
  <p><%=client.address2%></p>
  <p><%=client.address3%></p>
  <p><%=client.postcode%></p>
  <p><%=client.phone%></p>
  <p><%=client.email%></p>
  <h3>£<%= total %> previously billed.</h3>
</header>

<div class="actionBox">

  <h3 class='title centre'><a class='toggle' href="#previousItems">Previous Items</a></h3>
  <div class="toggle-content" id="previousItems">
    <% itemsList.forEach((item) => { %>
      <div class="summary-details">
        <p class='title'><%= moment(item.items.date).format("Do MMMM YYYY") %>
           (<a href="/invoices/<%= item._id%>">Invoice <%= item.invNo %></a>)</p>
           <p><%= item.items.desc %></p>
           <p>£<%= item.items.fee %>

          <% if (item.paid) { %>
            ( paid <%= moment(item.datePaid).format("Do MMMM YYYY")%> )
          <% } else { %>
            ( outstanding )
          <% } %>

        </p>
      </div>
    <% }); %>
  </div>
</div>


<% if (admin) { %>
  <div class="edit">
    <form method="get" action="/clients/edit/<%=client._id%>" novalidate>
      <div class="form-actions">
        <button class="btn" type="submit">Edit Details</button>
      </div>
    </form>
  </div>
  <div class="delete">
    <form method="post" action="/clients?_method=delete" novalidate>
      <input type="hidden" name="_csrf" value="<%=csrfToken%>">
      <input type="hidden" name="id" value="<%=client._id%>">
      <div class="form-actions">
        <button class="btn danger" type="submit">Delete</button>
      </div>
    </form>
  </div>
<% } %>
