<% if (admin) { %>
  <header>
    <h1>Clients.</h1>
  </header>
<% } %>

<div class="client-list">
  <ul>
    <% clients.forEach((client) => {%>
      <li>
        <a href="/clients/<%=client._id%>" class='capitalize'><%= client.name%></a>
      </li>
    <%})%>
  </ul>
</div>

<a class='btn' href="/clients/new">Add a new client.</a>
