<div class="actionBox">
  <header>
    <h1>Invoices</h1>
  </header>
</div>

<% if (invoices.length > 0) { %>
    <a class='toggle btn info' href="#previousInvoices">Previous Invoices</a>
    <div class="toggle-content" id="previousInvoices">
      <% invoices.forEach((invoice) => { %>
        <div class="actionBox">
          <p class='title'><a href="/invoices/<%=invoice._id.invoice_id%>">Invoice <%= invoice._id.invoice %>, <%= moment(invoice._id.date).format("Do MMMM YYYY") %></a></p>
          <p><a href="/clients/<%= invoice._id.clientLink %>" class='capitalize'><%= invoice._id.client %></a>, Â£<%= invoice.total%></p>
        </div>
      <% }); %>
    </div>
<% } %>

<% if (admin) { %>
  <a class='btn' href="/invoices/new">Make a new invoice.</a>
<% } %>
